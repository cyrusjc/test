<% include partials/header%>

<div class = "container">
    
    
    <Header class = "jumbotron">
        <div class="container">
            <h1> Welcome to YelpCamp!</h1>
            <p> View our hang-picked campgrounds from all over the world!</p>
            <p>
                 <a class = "btn btn-primary btn-large" href= "/campgrounds/new"> To create a new campsite! </a>
            </p>
        </div>
    </Header>
    
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <h3> Our Most Popular Campgrounds! <h3>
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class ="thumbnail">
                     <img src= "<%= campground.image %> ">
                     <div class="caption">
                         <%= campground.name%>
                     </div>
                </div>
            </div>
        <% }); %>
        
    </div>
    
    
   
    

     

     
    
    
</div>



